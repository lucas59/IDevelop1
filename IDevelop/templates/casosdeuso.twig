{% extends "base.twig" %}
{% block title %}Planificar Proyecto{% endblock %}
{% block head %}
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/altaProyecto.css">
{% endblock %}

{% block content %}
<main>
<div id="tabla_id" class="card">
	<div class="card card-body border-info">
		<form method="POST" id="formCasosDeUso">
			<span>
				<h2> Proyecto: {{proyecto.nombre}} </h2>
				<br>
			</span>
			<h3>Informacion del caso de uso</h3>
			<span>
				<label for="txtNombreCU"> Nombre caso de uso:</label>
				<input class="form-control" type="text" id="txtNombreCU" name="nombre" required>
			</span>
			<br>
			<span>
				<label for="txtDescripcion">Descripcion Proyecto:</label>
				<textarea class="form-control" name="txtDescripcion" id="txtDescripcion" rows="10" cols="50" placeholder="DescripciÃ³n del proyecto..."> </textarea>
			</span>
			<br>
			<span>
				<label for="Impacto"> Impacto en el proyecto:</label>
				<select id="Impacto">
					<option value="10">Bajo</option>
					<option value="20">Medio</option>
					<option value="30">Alto</option>
				</select>
			</span>
			<br>
			<br>
			<input type="hidden" id="proyecto_id" value="{{proyecto.id}}">
			<input class="btn btn-info" type="submit" name="submit" value="Crear caso de uso">
			<br>
					
		</form>
	</div>
</div>
</main>

<!-- Modal  de mensajes -->
<div id="modalAviso" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Resultado</h5>
			</div>
			<div class="modal-body">
				<p id="mensajeModal">Modal body text goes here.</p>
			</div>
			<div class="modal-footer">	
				<a type="button" class="btn" id="redirigir">Aceptar</a>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block script %}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/casosdeuso.js"></script>
{% endblock %}
