{% extends "base.twig" %}
{% block title %}Casos de uso{% endblock %}
{% block head %}
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/casodeuso_vista.css">
{% endblock %}
{% block content %}
<body background="{{path_for('Inicio')}}img/fondo.png"> 
<div class="container">
  <div class="page-header">
    <h1 style="text-align: center;" id="timeline">Casos de uso</h1>
  </div>
  
  <ul class="timeline">
    {% for caso in casosdeuso%}
    <li>
      <div class="timeline-badge info"><i class="glyphicon glyphicon-check"></i></div>
      <div style="padding: 7" class="timeline-panel">
        <div class="timeline-heading">
          <h4 class="timeline-title">{{caso.nombre}}</h4>
          <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>Puntos totales: {{caso.puntosTot}}</small></p>
        </div>
        <div class="timeline-body">
          <p>{{caso.descripcion}}</p>
        </div>
      </div>
    </li>
    {% endfor %}
  
  </ul>
</div>
</body>
{% endblock %}