{% extends "base.twig" %}
{% block title %}Planificar Proyecto{% endblock %}
{% block head %}
<link rel="stylesheet" type="text/css" href="/IDevelop1/IDevelop/public/styles/altaProyecto.css">
{% endblock %}

{% block content %}
<main>
<div id="tabla_id" class="card">
	<div class="card card-body border-info">
		<form method="POST" id="formModificarCU">
			<h2>Actualizar progreso de proyecto</h2>
			<br>
			<label for="nombreP"> Nombre del Proyecto:</label>
			<input type="text" name="nombreP" value="{{nombreProy}}">
			<br>
			<br>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Nombre caso de uso</th>
						<th scope="col">Descripci√≥n</th>
						<th scope="col">Impacto</th>
						<th scope="col">Progreso</th>
					</tr>
				</thead>
			<tbody>
			{% for cu in casosdeuso %}
				<tr class="fila" onclick="actualizarCasoDeUso({{cu.nombre}})" id="{{cu.nombre}}">
					<td>{{ cu.nombre }}</td>
					<td>{{ cu.descripcion }}</td>
					<td>{{ cu.impacto }}</td>
					<td>
						<select id="cmb{{cu.nombre}}">
							<option value="0">No iniciado</option>
							<option value="25">Comenzado</option>
							<option value="50">En progreso</option>
							<option value="100">Finalizado</option>
						</select>
					</td>
				</tr>
			{% endfor %}
			</tbody>
			</table>
		</form>
	</div>
</div>
</main>

<!-- Modal  de mensajes -->
<div id="modalAviso" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Aviso</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p id="mensajeModal">Modal body text goes here.</p>
			</div>
			<div class="modal-footer">	
				<a type="button" class="btn" id="redirigir">Aceptar</a>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block script %}
<script type="text/javascript" src="/IDevelop1/IDevelop/public/scripts/casosdeuso.js"></script>
{% endblock %}
