{% if proy %}
<!-- Tabs -->
<section id="tabs">
    <div class="container">
        <h6 class="section-title h1">Mis Proyectos</h6>
        <div class="row">
            <div class="col-xs-12 ">
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                      {% if postulaciones|length > 0 %}
                      <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Espera</a>
                      {% endif %}

                      {% if  proy|length > 0 %}
                      <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Desarrollo</a>
                      {% endif %}
                      {% if  finalizados|length > 0 %}
                      <a class="nav-item nav-link" id="nav-about-tab" data-toggle="tab" href="#nav-about" role="tab" aria-controls="nav-about" aria-selected="false">Finalizados</a>
                      {% endif %}
                  </div>
              </nav>
              <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                {% if postulaciones %}
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    {% for postulaciones in postulaciones %}
                    {% if postulaciones.estado == 0 %}
                    <div class="card" style="width: 18rem;margin-left: 10px">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{postulaciones.nombre}}</h5>
                            <p title="{{proyecto.descripcion}}" class="card-text ">{{postulaciones.descripcion}}</p>
                            <a style="position:absolute;right:40px;left:40px;bottom:0;" href="{{path_for('Inicio')}}Proyecto/{{ postulaciones.id }}" class="btn btn-primary">Entrar</a>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
                {% if  proy %}
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <div class="card-group">
                        {% for proyecto in proy %}
                        {% if proyecto.estado == 2 %}

                        <div class="card" style="width: 18rem;margin-left: 10px">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{proyecto.nombre}}</h5>
                                <p title="{{proyecto.descripcion}}" class="card-text">{{proyecto.descripcion}}</p>

                                <a style="position:absolute;right:40px;left:40px;bottom:0;" href="{{path_for('Inicio')}}Proyecto/{{ proyecto.id }}" class="btn btn-primary">Entrar</a>
                            </div>
                        </div>



                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                {% if  finalizados %}
                <div class="tab-pane fade" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                 {% for proyecto in finalizados %}
                 {% if proyecto.estado == 3 %}
                 <div class="card" style="width: 18rem;margin-left: 10px">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{proyecto.nombre}}</h5>
                        <p title="{{proyecto.descripcion}}" class="card-text">{{proyecto.descripcion}}</p>
                        <a style="position:absolute;right:40px;left:40px;bottom:0;" href="{{path_for('Inicio')}}Proyecto/{{ proyecto.id }}" class="btn btn-primary">Entrar</a>
                    </div>
                </div>
                {% endif %}
                {% endfor %}

            </div>
            {% endif %}
        </div>
    </div>
</div>
</div>
</section>
<!-- ./Tabs -->
{% endif %}