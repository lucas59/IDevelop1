{% block title %}Postulantes{% endblock %}
{% extends "base.twig" %}
{% block head %}
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/Estilos_generales.css">
{% endblock %}
{% block content %}
<body background="{{path_for('Inicio')}}img/fondo.png"> 
<div id="tabla_id">
<h1>Postulantes</h1>
  <table class="table table-bordered">
    <thead>
      <tr id="tabla_titulo" class="bg-info">
        <td>Email</td>
        <td>Cedula</td>
        <td>Desarrollo Preferido</td>
        <td>Accion</td>
      </tr>
    </thead>
    <tbody>
     <form id="formPostulantes" method="POST" class="form-signin">
      {% for pos in postulantes %}
      <tr>
      <input type="hidden" id="email" name="email" value={{ pos.email }}>
      <input type="hidden" id="idproyecto" name="idproyecto" value={{ proyecto.id }}>
      <input type="hidden" id="emailE" name="emailE" value={{ idEmpresa }}>
        <td>{{ pos.email }}</td>
        <td>{{ pos.Cedula }}</td>
        <td>{% for des in pos.desarrollo_preferido %}{{ des }}{% endfor %}</td>
        <td><input class="btn btn-info" type="submit" name="perfil" value="Ver Perfil"></td> 
      </tr>
        {% endfor %}
    </form>
        </tbody>
    </table>
</div>
{% block script %}
<script type="text/javascript" src="/IDevelop1/IDevelop/public/scripts/VerPostulantes.js"></script>
{% endblock %}
</body>
{% endblock %}