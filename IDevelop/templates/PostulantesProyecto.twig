{% block title %}Postulantes{% endblock %}
{% extends "base.twig" %}
{% block head %}
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/Estilos_generales.css">
{% endblock %}
{% block content %}
<div id="tabla_id">
<h1>Postulantes</h1>
  <table class="table">
    <thead>
      <tr id="tabla_titulo" class="bg-info">
        <td>Email</td>
        <td>Cedula</td>
        <td>Desarrollo Preferido</td>
        <td>Accion</td>
      </tr>
    </thead>
    <tbody>
      {% for pos in postulantes %}
      <tr>
        <td>{{ pos.email }}</td>
        <td>{{ pos.Cedula }}</td>
        <td>{{ pos.desarrollo_preferido }}</td>
        <td><a href="{{path_for('Inicio')}}Usuario/Perfil?email={{ pos.email }}">Ver Perfil</a> 
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
{% endblock %}