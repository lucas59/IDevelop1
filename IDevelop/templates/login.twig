{% extends "base.twig" %}
{% block title %}Login{% endblock %}
{% block head %}
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/Estilos_generales.css">
<link rel="stylesheet" type="text/css" href="{{path_for('Inicio')}}styles/login_2.css">
{% endblock %}
{% block content %}
<body background="{{path_for('Inicio')}}img/fondo.png"> 
<div id="tabla_id" class="card ">
    <div class="card card-body border-info tarjeta">
        <h1>Iniciar sesión</h1>
        <form id="formLogin" method="POST" class="form-signin">
           <div class="text-center mb-4">
            <img src="{{path_for('Inicio')}}img/user.png" width="72" height="72">
        </div>
        <label for="inputEmail">Correo:</label>
        <input type="email" id="Correo" name="Correo" class="form-control" placeholder="Correo" required autofocus>
        <label for="inputPassword">Contraseña:</label>
        <input type="password" id="Contrasena" name="Contrasena" class="form-control" placeholder="Contraseña" required>
        <br>
        <div class="text-center mb-4">
            <input type="checkbox" id="Seguir "name="Seguir"> Recordarme <br>
            <input class="btn btn-info" type="submit" name="aceptar" value="Confirmar">
        </div>
    </form>
</div>
</div>
<div class="modal fade" id="modalLogin" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Resultado</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
          <p id="textoModal">Bienvenido a IDevelop</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Entendido</button>
      </div>
  </div>
</div>
</div>
</body>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/Loggin.js"></script>
{% endblock %}
{% endblock %}